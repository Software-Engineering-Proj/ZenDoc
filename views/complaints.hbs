<!DOCTYPE html>
<html>
<head>
	<title>{{title}}</title>
</head>
<style>

html { width: 100%; height:100%; overflow:hidden; }

body{
    margin: 0;
    padding: 0;
    font-family: sans-serif;
    background: #092756;
    background: linear-gradient(#8b9da9, #fff6e4);
}

.main-div {
    margin-left: 70px;
    margin-bottom: 20px;
}

.main-div:last-child {
    margin-bottom: 0;
}

h2 {
    margin-left: 30px;
}

</style>

<body>
	<h2>Resolve Complaints</h2>
        {{#each complaints}}	
            <div class="main-div">
                {{this.comment_text}} 
                </br>
                {{#if this.file_name}}	
                {{this.file_name}}
                {{else }}
                {{this.first_name}} {{this.last_name}}
                {{/if}}		
                </br>
                {{this.complaint_type}}    
            </div>		
	    {{/each}}

</body>
</html>
